#:kivy 1.11.0
#:import sp kivy.metrics.sp
#:import dp kivy.metrics.dp


<App>:
    orientation: 'vertical'

    canvas.before:
        BorderImage:
            border: 10, 10, 10, 10
            source: 'images/step_background.jpg'
            pos: self.pos
            size: self.size  

    SomeMenu_ActionBar:
        id: ActionBar

    ScreenManagement:
        id: sm
        WelcomeScreen:
        AnalysisScreen:
        ConfigScreen:
        SummaryScreen:
        PlotScreen:
        PdfScreen:

<SomeMenu_ActionBar@ActionBar>:

    ActionView:
        id: ActionView

        HiddenIcon_ActionPrevious:
        
        ActionButton:
            text: 'Analysis'
            on_press: app.root.ids.sm.current = 'analysis'
        ActionButton:
            text: 'Config'
            on_press: app.root.ids.sm.current = 'config'
        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'Results'
            ActionButton:
                text: 'Summary'
                on_release: app.root.ids.sm.current = 'summary'
            ActionButton:
                text: 'Plots'
                on_release:  app.root.ids.sm.current = 'plots'
            ActionButton:
                text: 'Full PDF'
                on_release:  app.root.ids.sm.current = 'pdf'

<HiddenIcon_ActionPrevious@ActionPrevious>:
    title: 'Illumina IT'
    with_previous: False
    app_icon: 'images/icon.png'
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: 1
    on_release:  app.root.ids.sm.current = 'welcome'
    width: len(self.title) * 10
                          
<TitleLabel>
    font_size: 25
    pos_hint: { 'center_x' : .5 }
    size_hint: .8, None
    height:40
    color: 0,0,0,1
    border: 30, 30, 30, 30
    canvas.before:
        Color:
            rgb: .5,.5,.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ParaLabel>
    font_size: 20
    size_hint: .5, None
    height:30
    color: 0,0,0,1
    canvas.before:
        Color:
            rgb: .85,.85,.85, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
<ParaGridLayout>
    spacing: 10
    padding: 10
    size_hint_y: None
    height:40
 
<MyCheckBox>
    size_hint_x: 0.1
    canvas.before:
        Color:
            rgba: .7, .7, .7, 1
        Rectangle:
            size: 32, 32
            pos: int(self.center_x - 16), int(self.center_y - 16)

<MyButton>
    font_size: 20
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: ''
    background_color: .88,.88,.88, 1
    size_hint: 0.7, None 
            
<MyScrollView>
    bar_width: 10
    bar_color: 1, 0, 0, 1   # red
    bar_inactive_color: 0, 0, 1, 1   # blue
    effect_cls: "ScrollEffect"
    scroll_type: ['bars']
    scroll_timeout: 10000
     
<ScrollingBoxLayout>:
    name: "scrolling_box_layout"
    orientation: 'vertical'
    spacing: 5
    padding: 5
    size_hint_y: None
 
<WelcomeScreen>:
    name: 'welcome' 
    
<AnalysisScreen>:
    name: 'analysis'

<ConfigScreen>:
    name: 'config'
 
<SummaryScreen>:
    name: 'summary'

<PlotScreen>:
    name: 'plots'

<PdfScreen>:
    name: 'pdf'
   

   